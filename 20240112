#include <string>
#include <vector>

using namespace std;

string solution(string s) {
    string answer = "";
    int m=0;
    for(int i=0; i<s.size(); i++) {
        if(s[i] == ' ') {
            answer += s[i];
            m = 0;
        }
        else {
            if(m%2==0) {
                answer += toupper(s[i]);
            }
            else {
                answer += tolower(s[i]);
            }
            m ++;
        }
    }    
    return answer;
}
